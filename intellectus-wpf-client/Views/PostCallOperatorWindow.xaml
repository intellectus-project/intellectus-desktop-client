<Window x:Class="intellectus_wpf_client.PostCallOperatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intellectus_wpf_client"
        mc:Ignorable="d"
        Title="Intellectus" Height="1024" Width="1980"  WindowState="Maximized">
    <Grid Margin="0,0,-15,-6" Background="AliceBlue">

        <Image Source="/Resources/Background.png" Stretch="UniformToFill" />
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="550" Background="White">
            <Grid Width="300" Height="250"  Background="#F0F0F0">

                <RadioButton Name="rdbNeutrality" GroupName="EmotionsGroup" FontSize="16" Content="Neutral" HorizontalAlignment="Left" Margin="81,39,0,0" VerticalAlignment="Top"/>
                <RadioButton Name="rdbFear"  GroupName="EmotionsGroup" FontSize="16" Content="Con miedo" HorizontalAlignment="Left" Margin="81,81,0,0" VerticalAlignment="Top"/>
                <RadioButton Name="rdbHappiness"  GroupName="EmotionsGroup" FontSize="16" Content="Feliz" HorizontalAlignment="Left" Margin="81,121,0,0" VerticalAlignment="Top"/>
                <RadioButton Name="rdbSadness"  GroupName="EmotionsGroup" FontSize="16" Content="Triste" HorizontalAlignment="Left" Margin="81,161,0,0" VerticalAlignment="Top"/>
                <RadioButton Name="rdbAnger"  GroupName="EmotionsGroup" FontSize="16" Content="Con enojo" HorizontalAlignment="Left" Margin="81,201,0,0" VerticalAlignment="Top"/>
                
            </Grid>
            <Label Content="¿Cómo te sentiste?" FontSize="30pt" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" Height="63"/>
            <Label Content="*Ocurrió un error" Name="lblError" Visibility="Hidden"  Foreground="IndianRed" FontSize="10pt" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,498,0,0" VerticalAlignment="Top" Height="30" Width="406"/>
            <Button Content="Finalizar llamado" Name="btnEndCall" Foreground="White" HorizontalAlignment="Center" Margin="0,431,0,0" VerticalAlignment="Top" Width="260" Height="50" Click="btnEndCall_Click" />

        </Grid>
    </Grid>
</Window>
